<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/nike"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txttencongviec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sản phẩm mới"
            android:textColor="#E60909"
            android:textSize="26sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nike Air Force 1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtstatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500.000 VND"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/txtupdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ch_nh_s_a"
                android:textColor="#73E91E"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/txtdelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/x_a"
                android:textColor="#03F4D8"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>